<h1>ゴルフ場 一覧</h1>

<table>
  <thead>
    <tr>
      <th>コース名</th>
      <th>住所</th>
      <th colspan="3">処理</th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.GolfCourse %></td>
        <td><%= course.GolfAddress %></td>
        <td><%= button_to '詳細', course_path(course), method: :get %></td>
        <td><%= button_to '編集', edit_course_path(course), method: :get %></td>
        <td><%= button_to '削除', course, method: :delete, data: { confirm: '本当に削除しますか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

